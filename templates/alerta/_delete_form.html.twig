<form method="post" action="{{ path('app_alerta_delete', {'slug': alertum.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ alertum.slug) }}">
    <button class="btn btn-danger"><i class="fa fa-trash"></i> Borrar</button>
</form>
