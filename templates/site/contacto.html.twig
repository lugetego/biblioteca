        <div class="container">
            <div class="banner-title">Contacto</div>
        </div>
    </div>

    <section id="recursos">

        <div class="container">

            <div class="row flex-sm-column flex-md-row flex-lg-row row-cols-lg-3 my-5 mb-5">
                <div class="col-sm-12 col-md-12">
                    <div class="card-contacto">
                        <div class="contacto-foto"><img src="{{ asset('build/images/lidia.png') }}" alt="Foto"></div>
                        <div class="contacto-funcion">Responsable de biblioteca</div>
                        <div class="contacto-nombre">Lic. Lidia González García</div>
                        <div class="contacto-email">lidia<i class="bi-at"></i>matmor.unam.mx</div>
                        <div class="contacto-tel1">Morelia: (443)322 2772</div>
                        <div class="contacto-extension">RedUNAM:32772</div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12">
                    <div class="card-contacto">
                        <div class="contacto-foto"><img src="{{ asset('build/images/alejandro-medina.png') }}" alt="Foto"></div>
                        <div class="contacto-funcion">Referencia especializada</div>
                        <div class="contacto-nombre">MGSI. Juan Alejandro Medina Alanis</div>
                        <div class="contacto-email">alejandro<i class="bi-at"></i>matmor.unam.mx</div>
