{% extends 'base.html.twig' %}

{% block title %}ObrasCompletas index{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css">
{% endblock %}
{% block body %}
    <h1>ObrasCompletas index</h1>

    <table id="example" class="mt-5 table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Autor</th>
                <th>Titulo</th>
                <th>Url</th>
                <th>Vol</th>
                <th>Clasificacion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for obras_completa in obras_completas %}
            <tr>
                <td>{{ obras_completa.id }}</td>
                <td>{{ obras_completa.autor }}</td>
                <td>{{ obras_completa.titulo }}</td>
                <td>{{ obras_completa.url }}</td>
                <td>{{ obras_completa.vol }}</td>
                <td>{{ obras_completa.clasificacion }}</td>
                <td>
                    <a href="{{ path('app_obras_completas_show', {'id': obras_completa.id}) }}">show</a>
                    <a href="{{ path('app_obras_completas_edit', {'id': obras_completa.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_obras_completas_new') }}">Create new</a>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>

    <script type="application/javascript">
        $(document).ready(function() {
            $('#example').DataTable();
        } );
    </script>

{% endblock %}