{% extends 'base.html.twig' %}

{% block title %}Boletín {{ anio }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">



{% endblock %}


{% block body %}

    <div class="container">

        <div class="mt-4 mb-5">
            <h1>Boletín informativo {{ anio }}</h1>
            <div class="subtitle mb-5">de la Biblioteca del Centro de Ciencias Matemáticas</div>

        </div>

        <div class="row">

            {% for boletin in boletins %}
                <div class="col-12 col-sm-6 col-md-12 col-lg-3 mb-5"> <!-- Responsive column classes -->

                    <div class="d-flex flex-column align-items-center">
                        <img src="{{ vich_uploader_asset(boletin, 'boletinFile')}}" class="img-responsive w-75 mt-2 mb-2" alt="boletin cover" > <!-- Set image to w-100 -->
                        <a href="{{ boletin.url }}" target="_blank" class="btn btn-dark rounded-pill w-75 "><i class="fas fa-eye me-2"></i> Ver boletín <i class="fas fa-arrow-right ms-2"></i></a> <!-- Set button to w-100 -->
                    </div>
                </div>


            {% else %}
                <tr>
                    <td colspan="6" >
                        <div class="mb-5 text-center">No records found</div> <!-- Added mb-5 and centered the text -->
                    </td>
                </tr>
            {% endfor %}



        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="d-flex flex-column align-items-center"  >

                <a class="btn btn-dark mb-5" href="{{ path('app_boletin_index') }}"><i class="fa-regular fa-add"></i> Todos los boletínes</a>
            </div>
        {% endif %}



    </div>
{% endblock %}
